<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qrb.spzx.user.mapper.UserAddressMapper">

    <resultMap id="userAddressMap" type="com.qrb.spzx.model.entity.user.UserAddress" autoMapping="true">
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,user_id,name,phone,tag_name,province_code,city_code,district_code,address,full_address,is_default,create_time,update_time,is_deleted
    </sql>

    <!--//获取用户地址列表-->
     <select id="findUserAddressList" resultMap="userAddressMap">
         select <include refid="columns" />
         from user_address
         where
         user_id = #{userId}
     </select>

    <!--//根据id获取收货地址信息-->
    <select id="getUserAddress" resultMap="userAddressMap">
        select <include refid="columns" />
        from user_address
        where
        id = #{id}
    </select>

</mapper>
